<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <dimen name="h4TextSize">35sp</dimen>
    <dimen name="h2TextSize">17sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_thin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextViewThin">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
    </style>
<!--    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
<!--        &lt;!&ndash; Required for MaterialButton shape appearance &ndash;&gt;-->
<!--        -->
<!--    </style>-->

    <style name="ShapeAppearance.App.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <!-- res/values/themes.xml -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/forest_green</item>
        <item name="colorSecondary">@color/MediumVioletRed</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.Rounded</item>
    </style>

    <!-- No Action Bar variant - make sure this exists -->
    <style name="Theme.Survey.NoActionBar" parent="Theme.Survey">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/forest_green</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/forest_green</item>
        <item name="android:textColorHint">#999999</item>
    </style>


    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#212121</item>
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="android:textSize">16sp</item>
        <item name="android:tint">#616161</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>

</resources>