<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Light Theme -->
    <style name="Theme.Survey" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/forest_green</item>
        <item name="colorPrimaryDark">@color/forest_green_dark</item>
        <item name="colorPrimaryVariant">@color/forest_green_dark</item>
        <item name="colorSecondary">@color/MediumVioletRed</item>
        <item name="colorSecondaryVariant">@color/MediumVioletRed_dark</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorOnBackground">@color/light_on_background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/light_text_primary</item>
        <item name="android:textColorSecondary">@color/light_text_secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Control colors -->
        <item name="colorControlNormal">@color/forest_green</item>
        <item name="colorControlActivated">@color/forest_green</item>
        <item name="colorControlHighlight">@color/forest_green_light</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/forest_green</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Action bar -->
        <item name="actionBarStyle">@style/LightActionBar</item>
        <item name="toolbarStyle">@style/LightToolbar</item>

        <!-- Icons -->
        <item name="colorTertiary">@color/light_icon_color</item>

        <!-- Menu items -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>

        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropdownText</item>
        <item name="android:spinnerItemStyle">@style/SpinnerSelectedText</item>
        <item name="android:popupBackground">@color/white</item>


    </style>



    <!-- Light Action Bar Style -->
    <style name="LightActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:background">@color/forest_green</item>
        <item name="titleTextStyle">@style/LightActionBar.TitleText</item>
        <item name="subtitleTextStyle">@style/LightActionBar.SubtitleText</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="LightActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:textSize">20sp</item>-->
<!--        <item name="android:fontFamily">@font/poppins</item>-->
    </style>

    <style name="LightActionBar.SubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Light Toolbar Style -->
    <style name="LightToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/forest_green</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- Optional: Custom PLRA variant -->
<!--    <style name="Theme.SurveyPLRA" parent="Theme.Survey.NoActionBar" />-->
</resources>
