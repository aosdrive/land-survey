<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_8dp"
    android:layout_marginTop="@dimen/margin_3dp"
    android:elevation="@dimen/margin_2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_page_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/album_card_header"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_parcel_id_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="@dimen/album_title_padding"
                    android:text="Parcel No: "
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_area" />

                <TextView
                    android:id="@+id/tv_parcel_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingTop="@dimen/album_title_padding"
                    android:text="15102"
                    android:textColor="#000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_parcel_id_caption"
                    app:layout_constraintTop_toBottomOf="@+id/tv_area" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_view_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_2dp"
                android:padding="@dimen/margin_8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_preview_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_5dp"
                android:padding="@dimen/margin_8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_delete_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_survey_no_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/album_title_padding"
            android:text="Property No: "
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_page_header" />

        <TextView
            android:id="@+id/tv_survey_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:text="125"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_survey_no_caption"
            app:layout_constraintTop_toBottomOf="@+id/layout_page_header" />

        <TextView
            android:id="@+id/tv_owner_name_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/album_title_padding"
            android:text="Owner Name: "
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_survey_no_caption" />

        <TextView
            android:id="@+id/tv_owner_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:text="Habbash"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_owner_name_caption"
            app:layout_constraintTop_toBottomOf="@+id/tv_survey_no_caption" />

        <TextView
            android:id="@+id/tv_father_husband_name_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/album_title_padding"
            android:text="Father / Husband Name: "
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_owner_name_caption" />

        <TextView
            android:id="@+id/tv_father_husband_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:text="Mahmood"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_father_husband_name_caption"
            app:layout_constraintTop_toBottomOf="@+id/tv_owner_name_caption" />

        <TextView
            android:id="@+id/tv_area_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/album_title_padding"
            android:text="Area: "
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_father_husband_name_caption" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:text="124"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_area_caption"
            app:layout_constraintTop_toBottomOf="@+id/tv_father_husband_name_caption" />

        <!--        <TextView-->
        <!--            android:id="@+id/tv_parcel_id_caption"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:paddingLeft="8dp"-->
        <!--            android:paddingTop="@dimen/album_title_padding"-->
        <!--            android:visibility="gone"-->
