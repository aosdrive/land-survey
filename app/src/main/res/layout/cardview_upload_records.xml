        <!--            app:layout_constraintStart_toEndOf="@+id/tv_parcel_id_caption"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/tv_area" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/margin_2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_area_caption">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btn_view_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="@dimen/margin_6dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:minHeight="@dimen/margin_45dp"
                android:text="View Images"
                android:textColor="#fff" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btn_upload_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="@dimen/margin_6dp"
                android:layout_weight="1"
                android:background="@drawable/register_btn"
                android:minHeight="@dimen/margin_45dp"
                android:text="Upload"
                android:textColor="#fff" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>