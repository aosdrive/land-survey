<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="24dp">

        <!-- Main Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- CNIC Input -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="CNIC Number"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/forest_green"
                    app:boxStrokeErrorColor="#D32F2F"
                    app:helperText="Format: XXXXX-XXXXXXX-X"
                    app:helperTextTextColor="#999999"
                    app:hintTextColor="@color/forest_green"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/forest_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCnic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789-"
                        android:inputType="number"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:textColor="#333333"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contact Number Input -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Contact Number"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/forest_green"
                    app:boxStrokeErrorColor="#D32F2F"
                    app:helperText="Enter mobile number"
                    app:helperTextTextColor="#999999"
                    app:hintTextColor="@color/forest_green"
                    app:prefixText="+92 "
                    app:startIconDrawable="@android:drawable/stat_notify_call_mute"
                    app:startIconTint="@color/forest_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:textColor="#333333"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address Input -->
<!--                <com.google.android.material.textfield.TextInputLayout-->
<!--                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginBottom="16dp"-->
<!--                    android:hint="Address"-->
<!--                    app:boxBackgroundMode="outline"-->
<!--                    app:boxCornerRadiusBottomEnd="8dp"-->
<!--                    app:boxCornerRadiusBottomStart="8dp"-->
<!--                    app:boxCornerRadiusTopEnd="8dp"-->
<!--                    app:boxCornerRadiusTopStart="8dp"-->
<!--                    app:boxStrokeColor="@color/forest_green"-->
<!--                    app:boxStrokeErrorColor="#D32F2F"-->
<!--                    app:helperText="Enter complete address"-->
<!--                    app:helperTextTextColor="#999999"-->
<!--                    app:hintTextColor="@color/forest_green"-->
<!--                    app:startIconDrawable="@android:drawable/ic_menu_mylocation"-->
<!--                    app:startIconTint="@color/forest_green">-->

<!--                    <com.google.android.material.textfield.TextInputEditText-->
<!--                        android:id="@+id/etAddress"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:inputType="textPostalAddress|textCapSentences"-->
<!--                        android:maxLength="200"-->
<!--                        android:minLines="2"-->
