<!--                        android:gravity="start|top"-->
<!--                        android:textColor="#333333"-->
<!--                        android:textSize="15sp" />-->
<!--                </com.google.android.material.textfield.TextInputLayout>-->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Image Capture Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/Chocolate" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Photo Capture"
                        android:textColor="@color/Chocolate"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Capture Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCaptureImage"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="Capture Photo"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/Chocolate"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

                <!-- Image Preview Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FAFAFA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp">

                        <!-- Image View -->
                        <ImageView
                            android:id="@+id/ivCapturedImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <!-- Empty State -->
                        <LinearLayout
                            android:id="@+id/layoutImageEmptyState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:alpha="0.3"
                                android:src="@android:drawable/ic_menu_camera"
                                app:tint="#999999" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="No photo captured"
                                android:textColor="#999999"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Tap the button above to capture"
                                android:textColor="#CCCCCC"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thumbprint Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:background="#1976D2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fingerprint Verification"
                        android:textColor="#1976D2"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Verify Fingerprint Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCaptureThumbprint"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="Verify Fingerprint"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:backgroundTint="#1976D2"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_lock_idle_lock"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

                <!-- Thumbprint Status Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FAFAFA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp">

                        <!-- Empty State -->
                        <LinearLayout
                            android:id="@+id/layoutThumbprintEmptyState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:alpha="0.3"
                                android:src="@android:drawable/ic_menu_view"
                                app:tint="#1976D2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="No fingerprint verified"
                                android:textColor="#999999"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Tap the button above to verify"
                                android:textColor="#CCCCCC"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Status Indicator -->
                        <LinearLayout
                            android:id="@+id/layoutThumbprintStatus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="24dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@android:drawable/ic_secure"
                                app:tint="#4CAF50" />

                            <View
                                android:id="@+id/viewThumbprintStatusDot"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="12dp"
                                android:background="@android:drawable/presence_online" />

                            <TextView
                                android:id="@+id/tvThumbprintStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Verified"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Fingerprint authenticated successfully"
                                android:textColor="#666666"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:text="Save Registration"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/forest_green"
            app:cornerRadius="12dp"
            app:elevation="4dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

    </LinearLayout>
</ScrollView>