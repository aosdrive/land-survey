<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/album_card_bg">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="10dp"
            android:text="@string/map"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_download_parcels"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="@dimen/margin_50dp"-->
        <!--            android:layout_marginStart="@dimen/margin_5dp"-->
        <!--            android:layout_weight="1.5"-->
        <!--            android:contentDescription="@string/info"-->
        <!--            android:gravity="center"-->
        <!--            android:padding="@dimen/margin_10dp"-->
        <!--            android:scaleType="fitXY"-->
        <!--            android:src="@android:drawable/stat_sys_download"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:tint="@color/white" />-->

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="308dp"
            android:layout_weight="1.5"
            android:contentDescription="@string/info"
            android:gravity="center"
            android:padding="@dimen/margin_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintEnd_toStartOf="@+id/iv_reset"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="1.5"
            android:contentDescription="@string/info"
            android:gravity="center"
            android:padding="@dimen/margin_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/search"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/iv_reset"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/iv_reset"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_weight="1.5"
            android:contentDescription="@string/info"
            android:gravity="center"
            android:padding="@dimen/margin_10dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_popup_sync"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/listitem_text_activated"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_app_name" />

        <!--        <TextView-->
        <!--            android:id="@+id/tv_page_number"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_weight="1"-->
        <!--            android:gravity="center"-->
        <!--            android:minHeight="50dp"-->
        <!--            android:padding="10dp"-->
        <!--            android:text="@string/_1_6"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="@dimen/text_size_small"-->
        <!--            android:visibility="visible"-->
        <!--            app:layout_constraintEnd_toEndOf="@+id/tv_header"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/tv_header" />-->

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_header" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/margin_45dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/margin_20dp"
            android:paddingVertical="@dimen/margin_4dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_header">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_parcel_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/margin_2dp"
                android:gravity="center"
                android:text="@string/total_parcels"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_unsurveyed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layout_surveyed"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_parcel_count">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="@dimen/margin_20dp"
                    android:padding="@dimen/margin_2dp"
                    app:cardBackgroundColor="@color/parcel_red"
                    app:cardCornerRadius="@dimen/margin_20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_2dp"
                    android:text="@string/unsurveyed_parcels"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_unsurveyed_parcel_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_surveyed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/layout_unsurveyed"
                app:layout_constraintTop_toBottomOf="@id/tv_parcel_count">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="@dimen/margin_20dp"
                    android:padding="@dimen/margin_2dp"
                    app:cardBackgroundColor="@color/parcel_green"
                    app:cardCornerRadius="@dimen/margin_20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_2dp"
                    android:text="@string/surveyed_parcels"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_surveyed_parcel_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_10sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/mergeControlBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#33000000"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnDoneMerge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:text="Done"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnCancelMerge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#F44336"
                android:text="Cancel"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_rejected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/margin_20dp"
            android:paddingVertical="@dimen/margin_4dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_info">

            <LinearLayout
                android:id="@+id/layout_locked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_2dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/layout_revisit"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="@dimen/margin_20dp"
                    android:padding="@dimen/margin_2dp"
                    app:cardBackgroundColor="@color/parcel_blue"
                    app:cardCornerRadius="@dimen/margin_20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_2dp"
                    android:text="@string/locked_parcels"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_lccked_parcel_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_revisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_2dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/layout_locked"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="@dimen/margin_20dp"
                    android:padding="@dimen/margin_2dp"
                    app:cardBackgroundColor="#FC00FC"
                    app:cardCornerRadius="@dimen/margin_20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_2dp"
                    android:text="@string/revisit_parcels"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_revisit_parcel_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/margin_10sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/parcel_mapview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_rejected" />

        <!-- Edit Mode Controls - Now properly positioned in ConstraintLayout -->
        <LinearLayout
            android:id="@+id/layoutSplitControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btnApplySplit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@color/primaryColor"
                android:text="Apply Split"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnCancelSplit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/primaryColor"
                android:text="Cancel Split"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Task Assign Control Bar -->
    <LinearLayout
        android:id="@+id/taskAssignControlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTaskAssignCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 parcel(s) selected"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDoneTaskAssign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Proceed"
                android:backgroundTint="@color/primaryColor"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCancelTaskAssign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:backgroundTint="@color/red"/>
        </LinearLayout>
    </LinearLayout>
    <!-- Floating Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="50dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="end|bottom"
        android:orientation="vertical"
        android:padding="@dimen/margin_16dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:contentDescription="@string/location_button"
            app:backgroundTint="@color/DarkOrange"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSplitMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_26dp"
            android:contentDescription="@string/location_button"
            app:backgroundTint="@color/DarkOrange"
            app:srcCompat="@drawable/edit" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>