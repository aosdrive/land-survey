<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <View
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:background="@color/forest_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Person Details"
                android:textColor="@color/forest_green"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- First Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="First Name"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/forest_green"
            app:hintTextColor="@color/forest_green"
            app:startIconDrawable="@android:drawable/ic_menu_edit"
            app:startIconTint="@color/forest_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Last Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Last Name"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/forest_green"
            app:hintTextColor="@color/forest_green"
            app:startIconDrawable="@android:drawable/ic_menu_edit"
            app:startIconTint="@color/forest_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Relation Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:text="Relation"
            android:textColor="#666666"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerRelation"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_selector"
            android:paddingStart="16dp"
            android:paddingEnd="44dp"
            android:spinnerMode="dropdown" />

        <!-- CNIC -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="CNIC"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/forest_green"
            app:hintTextColor="@color/forest_green"
            app:startIconDrawable="@android:drawable/ic_menu_myplaces"
            app:startIconTint="@color/forest_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mobile Number -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Mobile Number"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/forest_green"
            app:hintTextColor="@color/forest_green"
            app:prefixText="+92 "
            app:startIconDrawable="@android:drawable/stat_sys_phone_call"
            app:startIconTint="@color/forest_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Address -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Address"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/forest_green"
            app:hintTextColor="@color/forest_green"
            app:startIconDrawable="@android:drawable/ic_dialog_map"
            app:startIconTint="@color/forest_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textColor="#333333"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Ownership Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:text="Ownership Type"
            android:textColor="#666666"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerOwnership"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_selector"
            android:paddingStart="16dp"
            android:paddingEnd="44dp"
            android:spinnerMode="dropdown" />

        <!-- Gender -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:text="Select Gender"
            android:textColor="#666666"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_selector"
            android:paddingStart="16dp"
            android:paddingEnd="44dp"
            android:spinnerMode="dropdown" />

        <!-- Person Area -->
<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="12dp"-->
<!--            android:hint="Person Area"-->
<!--            app:boxBackgroundMode="outline"-->
<!--            app:boxCornerRadiusBottomEnd="8dp"-->
<!--            app:boxCornerRadiusBottomStart="8dp"-->
<!--            app:boxCornerRadiusTopEnd="8dp"-->
<!--            app:boxCornerRadiusTopStart="8dp"-->
<!--            app:boxStrokeColor="@color/forest_green"-->
<!--            app:hintTextColor="@color/forest_green"-->
<!--            app:startIconDrawable="@android:drawable/ic_dialog_map"-->
<!--            app:startIconTint="@color/forest_green">-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/etPersonArea"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:inputType="numberDecimal"-->
<!--                android:maxLines="1"-->
<!--                android:textColor="#333333"-->
<!--                android:textSize="15sp" />-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <!-- Grower Code -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Grower Code"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/forest_green"
            app:hintTextColor="@color/forest_green"
            app:startIconDrawable="@android:drawable/ic_menu_info_details"
            app:startIconTint="@color/forest_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGrowerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Hidden Fields -->
        <EditText
            android:id="@+id/etReligion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etExtra1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etExtra2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etMauzaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etMauzaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etPersonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etSurveyId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemove"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="Remove Person"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>