                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@android:drawable/dialog_holo_light_frame">

                    <LinearLayout
                        android:id="@+id/ll_sync_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
