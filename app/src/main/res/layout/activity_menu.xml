                <LinearLayout
                    android:id="@+id/cv_start_survey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/dialog_holo_light_frame">

                    <LinearLayout
                        android:id="@+id/ll_start_survey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_15dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/program_title"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_add_24" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_min"
                            android:layout_weight="9"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_2dp"
                                android:gravity="center"
                                android:text="@string/start_survey"
                                android:textAllCaps="true"
                                android:textColor="@color/MediumVioletRed"
                                android:textSize="@dimen/text_size_xxlarge"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_2dp"
                                android:gravity="center"
                                android:text="@string/initiate_ownership_data_collection"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cv_property_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@android:drawable/dialog_holo_light_frame">

                    <LinearLayout
                        android:id="@+id/ll_property_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_15dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/program_title"
                            android:gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_lines"
                            app:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_min"
                            android:layout_weight="9"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_2dp"
                                android:gravity="center"
                                android:text="@string/owners_list"
                                android:textAllCaps="true"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/text_size_xxlarge"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_2dp"
                                android:gravity="center"
                                android:text="@string/view_list_of_owners"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cv_upload_records"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/dialog_holo_light_frame">

                    <LinearLayout
                        android:id="@+id/ll_upload_records"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_15dp">

                        <ImageView
