<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <LinearLayout
        android:id="@+id/formRoot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/light_grey">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Assigned Information"
            android:textStyle="bold"
            android:textColor="@color/forest_green"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/forest_green"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of visit"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/forest_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Type"
            android:textColor="@color/forest_green"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerPropertyStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/white"
            android:padding="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textColor="@color/forest_green"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task detail"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/forest_green" />

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Days to complete"-->
<!--            android:textColor="@color/forest_green"-->
<!--            android:textSize="16sp"-->
<!--            android:paddingTop="12dp"-->
<!--            android:paddingBottom="4dp" />-->

<!--        <EditText-->
<!--            android:id="@+id/etDays_to_complete"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Please enter days"-->
<!--            android:inputType="number"-->
<!--            android:textColor="@color/black"-->
<!--            android:textColorHint="@color/black"-->
<!--            android:backgroundTint="@color/forest_green" />-->

        <TextView
            android:text="Select Officer For Task"
            android:textStyle="bold"
            android:textColor="@color/forest_green"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnSelectOwner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select from List"
                android:backgroundTint="@color/forest_green"
                android:textColor="@android:color/white" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardSelectedUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected Officer"
                            android:textSize="12sp"
                            android:textColor="@color/forest_green"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSelectedUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Officer Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvSelectedUserCnic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CNIC: 12345-1234567-1"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvSelectedUserRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Role: Officer"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnRemoveSelectedUser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:contentDescription="Remove selected user"
                        app:tint="@android:color/holo_red_light" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutPersonEntries"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />


        <TextView
            android:text="Pictures / Documents"
            android:textStyle="bold"
            android:textColor="@color/forest_green"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnAddImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Add Picture"
                android:backgroundTint="@color/forest_green"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capture Image"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/Chocolate"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <TextView
            android:text="Wait till pictures load here..."
            android:textStyle="bold"
            android:textColor="@color/forest_green"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Otherwise they will not be saved"

            android:textColor="@color/red"
            android:textSize="10sp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPictures"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="@android:color/white"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnSubmitSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Submit"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/forest_green"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>


</ScrollView>
