<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_sync_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame">

    <LinearLayout
        android:id="@+id/ll_sync_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2dp"
                    android:gravity="center"
                    android:text="@string/sub_parcel"
                    android:textAllCaps="true"
                    android:textColor="@color/Black"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/text_size_xxxlarge"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_sub_parcel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_5dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_xxxxlarge"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2dp"
                    android:gravity="center"
                    android:text="Reason: "
                    android:textColor="@color/Red"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

