<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/ivFlower"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/capture_pictures"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_picture_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/DarkGray"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/margin_5dp"
        android:padding="@dimen/margin_max"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xxxxlarge"
        android:textStyle="bold" />


</RelativeLayout>






