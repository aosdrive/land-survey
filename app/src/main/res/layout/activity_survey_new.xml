<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <LinearLayout
        android:id="@+id/formRoot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/light_grey">

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/blue_background"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvParcelInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Parcel Info will be shown here" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Information"
            android:textStyle="bold"
            android:textColor="@color/forest_green"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Type"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etPropertyType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Property Type"
            android:visibility="gone"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />

        <Spinner
            android:id="@+id/spinnerPropertyStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/white"
            android:padding="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parcel Ownership"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerOwnershipStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/white"
            android:padding="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crops"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />



        <Spinner
            android:id="@+id/etCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/white"
            android:padding="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crop Type"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />



        <Spinner
            android:id="@+id/etCropType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/white"
            android:padding="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Varity"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/etVariety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/white"
            android:padding="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:inputType="number"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />


        <EditText
            android:id="@+id/etArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Area (Kanal / Marla)"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />

        <CheckBox
            android:id="@+id/cbGeometryCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solar Available"
            android:height="62dp"
            android:textColor="@color/forest_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remarks"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />


        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks"
            android:minLines="2"
            android:gravity="top"
            android:textColor="@color/black"
            android:backgroundTint="@color/forest_green" />

        <TextView
            android:text="Owner / Leasee Information"
            android:textStyle="bold"
            android:textColor="@color/forest_green"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnSelectOwner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select from List"
                android:backgroundTint="@color/forest_green"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnAddNewPerson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Add New"
                android:textStyle="bold"
                android:backgroundTint="@color/dark_green"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPersonEntries"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />


        <TextView
            android:text="Pictures / Documents"
            android:textStyle="bold"
            android:textColor="@color/forest_green"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerImageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:popupBackground="@color/white"
            android:backgroundTint="@color/forest_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnAddImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Add Picture"
                android:backgroundTint="@color/forest_green"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capture Image"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/Chocolate"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <TextView
            android:text="Wait till pictures load here..."
            android:textStyle="bold"
            android:textColor="@color/forest_green"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Otherwise they will not be saved"

            android:textColor="@color/red"
            android:textSize="10sp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPictures"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="@android:color/white"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnSubmitSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Survey"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/forest_green"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>
