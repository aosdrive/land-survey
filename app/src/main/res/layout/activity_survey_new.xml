<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/formRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header Card (keep as before) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/forest_green"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvParcelInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:text="Parcel Info will be shown here"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Property Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/forest_green" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Property Information"
                        android:textColor="@color/forest_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Property Type Spinner (keep as before) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Property Type"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerPropertyStatus"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_selector"
                    android:paddingStart="16dp"
                    android:paddingEnd="44dp"
                    android:spinnerMode="dropdown" />

                <!-- Ownership Status Spinner (keep as before) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Parcel Ownership"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerOwnershipStatus"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_selector"
                    android:paddingStart="16dp"
                    android:paddingEnd="44dp"
                    android:spinnerMode="dropdown" />

                <!-- Crop Spinner (keep as before) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Crop"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/etCrop"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_selector"
                    android:paddingStart="16dp"
                    android:paddingEnd="44dp"
                    android:spinnerMode="dropdown" />

                <!-- Crop Type Spinner (keep as before) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Crop Type"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/etCropType"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_selector"
                    android:paddingStart="16dp"
                    android:paddingEnd="44dp"
                    android:spinnerMode="dropdown" />

                <!-- Variety Spinner (keep as before) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Variety"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/etVariety"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_selector"
                    android:paddingStart="16dp"
                    android:paddingEnd="44dp"
                    android:spinnerMode="dropdown" />

                <!-- Year and Area in Row with TextInputLayout -->


                <!-- Year Input - Full Width -->
<!--                <com.google.android.material.textfield.TextInputLayout-->
<!--                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
